package pieces;

/**
 * Coordinate relative to the board
 * 
 * @author Reggie Senal
 * 
 */
public class Position {

	private int x;
	private int y;
	public Position() {
		setPosition(0, 0);
	}
	
	public Position(int x, int y) {
		if (x < 0)
			x = 0;
		if (y < 0)
			y = 0
		setPosition(x, y);
	}
	
	public void setPosition(int x, int y) {
		this.x = x;
		this.y = y;
	}
}
